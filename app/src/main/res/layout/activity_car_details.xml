<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a4scar.myapplication.view.ui.fourescar.Car_details"
    android:weightSum="1">

    <ImageView
        android:src="@drawable/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fore_Logo"
        android:layout_alignBottom="@+id/fore_Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:id="@+id/fore_Image"
        android:layout_width="match_parent"
        android:layout_height="225px"
        android:src="@drawable/che"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/fore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某某汽车店"
        android:background="#000"
        android:textColor="#fff"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/fore_Logo"
        android:layout_toRightOf="@+id/fore_Logo"
        android:layout_toEndOf="@+id/fore_Logo" />

    <TextView
        android:id="@+id/fore_address"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:background="#000"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区"
        android:layout_alignBottom="@+id/fore_Image"
        android:layout_alignLeft="@+id/fore_name"
        android:layout_alignStart="@+id/fore_name" />
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/fore_Image"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"></android.support.design.widget.TabLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/tabLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/foreViewPager"
    android:orientation="horizontal">
<ImageView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/yue"
    android:src="@drawable/yue"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/faxianba"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/daohang"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="余额"
        android:gravity="center"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="发现"
        android:gravity="center"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="导航"
        android:gravity="center"
        android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
