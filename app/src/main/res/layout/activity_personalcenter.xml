<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/liner"
    android:background="#f9f9fa"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/touxiang_liner"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="20px"
            android:text="头像"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/touxiang_updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20px"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#bbbbbc"></View>
    <LinearLayout
        android:id="@+id/nicheng_liner"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:textSize="30px"
            android:text="昵称"/>
        <TextView
            android:id="@+id/nicheng_updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:textSize="30px"
            android:text="lay"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#bbbbbc"></View>
    <LinearLayout
        android:id="@+id/name_liner"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:textSize="30px"
            android:text="姓名"/>
        <TextView
            android:id="@+id/name_updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:textSize="30px"
            android:text="张杰"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#bbbbbc"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:id="@+id/youxiang_liner"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:textSize="30px"
            android:text="邮箱"/>

        <TextView
            android:id="@+id/youxiang_updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:text="1015571418@qq.com"
            android:textSize="30px" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="确定"
        android:background="#ff0000"
        android:layout_alignParentBottom="true"
        android:textSize="35px"
        />
    </RelativeLayout>
</LinearLayout>