<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:orientation="vertical"
    >
    <com.recker.flybanner.FlyBanner
        android:layout_width="match_parent"
        android:layout_height="300px"
         android:id="@+id/fly_banner"
        >
    </com.recker.flybanner.FlyBanner>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="145px"
          android:orientation="horizontal"
        >
        <RadioButton
            style="@style/TabBtn"
            android:drawableTop="@mipmap/dianbaoyang"
            android:text="4S店保养"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/dianweixiu"
            android:text="4S店维修"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/dianzhanting"
            android:text="4S店展厅"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/dianxubao"
            android:text="4S店续保"
            android:textSize="30px"
            />
        <RadioButton
            style="@style/TabBtn"
            android:drawableTop="@mipmap/dianjingpin"
            android:text="4S店精品"
            android:textSize="30px"
            />
    </RadioGroup>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:orientation="horizontal"
        >
        <RadioButton
            style="@style/TabBtn"
            android:drawableTop="@mipmap/xiche"
            android:text="洗车"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/jingcaihuodong"
            android:text="精彩活动"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/jifenshangcheng"
            android:text="积分商场"
            android:textSize="30px"
            />
        <RadioButton

            style="@style/TabBtn"
            android:drawableTop="@mipmap/weizhangchaxun"
            android:text="违章查询"
            android:textSize="30px"
            />
        <RadioButton
            style="@style/TabBtn"
            android:drawableTop="@mipmap/daolujiuyuan"
            android:text="道路援救"
            android:textSize="30px"
            />
    </RadioGroup>
</com.zhy.autolayout.AutoLinearLayout>
