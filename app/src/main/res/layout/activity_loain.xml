<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/loginbackground">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_gravity="center"
        android:src="@mipmap/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="120px"
        android:background="@drawable/login_ed"

        android:showDividers="middle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/reginst_ipone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:background="#0000"
            android:hint="输入手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="50px"
        android:background="@drawable/login_ed"

        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:src="@mipmap/suo" />

        <EditText
            android:id="@+id/login_et_pwd"
            android:layout_width="0px"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_weight="6"
            android:background="#0000"
            android:hint="输入密码"
            android:password="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/getCode"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/login_ed2"
            android:divider="@drawable/spacer_medium"
            android:showDividers="middle"
            android:text="获取验证码"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="100px"
        android:text="立即登录"
        android:textColor="@drawable/buttoncoler"
        android:textSize="40px"
        android:background="@drawable/buttonloginground"/>
</LinearLayout>