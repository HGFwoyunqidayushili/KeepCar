<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xi_che_xiang_qiing"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jiyun.com.keepcar.ui.homepage.XiCheXiangQiingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="fitXY"
            android:src="@drawable/tiexia"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="18dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="某某洗车店"
            android:layout_marginBottom="37dp"
            android:id="@+id/textXicheName"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:id="@+id/textXiCheaddress"
            android:text="北京市朝阳区"
            android:layout_marginBottom="11dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/textXicheName"
            android:layout_alignStart="@+id/textXicheName" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#212322"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp"
            android:id="@+id/linearLayout"
            android:layout_alignTop="@+id/textXiCheaddress"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综评4.9"
                android:textColor="#ff00"
                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:src="@drawable/shangshneg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
             android:background="#fff"
            android:layout_alignTop="@+id/textXicheName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:src="@drawable/weizhi"/>

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="2010km"
                android:textColor="#000"
                android:id="@+id/textView3" />

        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/xichexaingqingListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/Local_account"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:src="@drawable/bendianzhanghu"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/daipingjia"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/daohangss"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本地账户"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待评价"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="导航"/>
    </LinearLayout>
</LinearLayout>
