<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context="jiyun.com.keepcar.ui.fourCarshow.fragment.NewCarshowFragment">

    <!-- TODO: Update blank fragment layout -->
    <RadioGroup
        android:id="@+id/tabGroup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbTabHome"
            style="@style/TabBtn"
            android:checked="true"
              android:text="品牌"
            android:textSize="40px"
            android:paddingRight="80px"
            android:drawablePadding="-80px"
            android:drawableRight="@mipmap/off"
            />
        <RadioButton
            android:id="@+id/rb4Sshop"
            style="@style/TabBtn"
            android:textSize="40px"
            android:text="排序"
             android:drawableRight="@mipmap/off"
               android:paddingRight="80px"
            android:drawablePadding="-80px"
            />


    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>
